//-----------------------------------------------------------------------
// include, define
#include "NXCDefs.h"
#define _NEAR 20
#define _POWER_B 20
#define _POWER_C 60
//-----------------------------------------------------------------------
task main(){
  //---------------------------------------------------------------------
  // initialization
  SetSensorLowspeed(IN_4); // declare the UltraSoeed on PORT_#4
  bool run = false ;
  //---------------------------------------------------------------------
  // always executed
  while(true){
    //-------------------------------------------------------------------
    // if something sensed, change state
    if(SensorUS(IN_4) <= _NEAR){
      Wait(700); // the checking time should be long enough
      if(run){
        run = false;
      }else{
        run = true;
      }// end if else run
    }// end if
    //-------------------------------------------------------------------
    // draw a circle
    if(run){
      OnFwd(OUT_B, 20);	
      OnFwd(OUT_C, 60);
    }else{
			Off(OUT_B);
      Off(OUT_C);
    }// end if else circle
  }// end while
}// end task
